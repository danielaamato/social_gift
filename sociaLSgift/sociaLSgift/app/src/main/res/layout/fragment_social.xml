<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6FD18F"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSearchHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtrar por nombre de usuario"
        android:textColor="#000000"
        android:padding="8dp" />

    <SearchView
        android:id="@+id/searchViewFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSearchHint"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFriends"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnFriendRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Solicitudes de amistad" />

</LinearLayout>


